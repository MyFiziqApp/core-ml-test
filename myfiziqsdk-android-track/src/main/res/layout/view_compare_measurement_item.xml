<?xml version="1.0" encoding="utf-8"?>
<com.myfiziq.sdk.views.ItemRowConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MFTViewCompareMeasurementItemLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleVerticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleHorizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/title"
        style="@style/MFTViewCompareMeasurementItemTitle"
        tools:text="TITLE"
        app:layout_constraintBottom_toTopOf="@+id/middleHorizontalGuideline"
        app:layout_constraintLeft_toLeftOf="@+id/middleVerticalGuideline"
        app:layout_constraintRight_toRightOf="@+id/middleVerticalGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <com.myfiziq.sdk.views.QuantityTextView
        android:id="@+id/valueOne"
        style="@style/MFTViewCompareMeasurementItemFirstValue"
        tools:text="xx cm"
        app:layout_constraintBottom_toBottomOf="@+id/middleHorizontalGuideline"
        app:layout_constraintRight_toLeftOf="@+id/middleVerticalGuideline"
        app:layout_constraintTop_toTopOf="@+id/middleHorizontalGuideline" />

    <com.myfiziq.sdk.views.QuantityTextView
        android:id="@+id/valueTwo"
        style="@style/MFTViewCompareMeasurementItemSecondValue"
        tools:text="xx cm"
        app:layout_constraintBottom_toBottomOf="@+id/middleHorizontalGuideline"
        app:layout_constraintLeft_toRightOf="@+id/middleVerticalGuideline"
        app:layout_constraintTop_toTopOf="@+id/middleHorizontalGuideline" />

    <LinearLayout
        android:id="@+id/deltaContainer"
        style="@style/MFTViewCompareMeasurementItemDeltaContainer"
        app:layout_constraintBottom_toTopOf="@+id/dividerBottom"
        app:layout_constraintLeft_toLeftOf="@+id/middleVerticalGuideline"
        app:layout_constraintRight_toRightOf="@+id/middleVerticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/middleHorizontalGuideline">

        <ImageView
            android:id="@+id/deltaImg"
            style="@style/MFTViewCompareMeasurementItemDeltaImage"
            android:src="@drawable/ic_mini_arrow_up" />

        <TextView
            android:id="@+id/delta"
            style="@style/MFTViewCompareMeasurementItemDeltaText"
            tools:text="0.2%" />

    </LinearLayout>

    <View
        android:id="@+id/dividerBottom"
        style="@style/MFTViewCompareMeasurementItemDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</com.myfiziq.sdk.views.ItemRowConstraintLayout>
