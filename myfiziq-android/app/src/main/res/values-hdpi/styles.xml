<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WelcomeHeader" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">60dp</item>
    </style>

    <style name="WelcomeDescription" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>