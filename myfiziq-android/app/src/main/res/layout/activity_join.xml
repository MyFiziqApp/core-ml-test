<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ToolbarTheme.v2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdgeLength="60dp"
        android:requiresFadingEdge="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/dateOfBirthHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dateOfBirthContainer"
                style="@style/MFTextInputStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/single_space"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateOfBirthHeading"
                tools:ignore="HardcodedText">
                <!-- Leave a space in the TextInputLayout hint for a blank label but keep a hint in the EditText when there is no input -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateOfBirth"
                    style="@style/MFEditTextStyle"
                    android:drawableEnd="@drawable/ic_person"
                    android:paddingEnd="15dp"
                    android:focusable="true"
                    android:importantForAutofill="no"
                    android:hint="@string/date_of_birth"
                    android:inputType="none"
                    tools:ignore="UnusedAttribute" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/genderHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/gender"
                app:layout_constraintTop_toBottomOf="@+id/dateOfBirthContainer" />


            <LinearLayout
                android:id="@+id/genderGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/genderHeading"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:weightSum="100">

                <LinearLayout
                    style="@style/MFRadioButtonContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="50">

                    <RadioButton
                        android:id="@+id/genderMale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="gender"
                        android:text="@string/male"
                        android:theme="@style/MFRadioButton" />

                </LinearLayout>

                <LinearLayout
                    style="@style/MFRadioButtonContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="50">

                    <RadioButton
                        android:id="@+id/genderFemale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="gender"
                        android:text="@string/female"
                        android:theme="@style/MFRadioButton" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/loginDetailsHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/email_address"
                app:layout_constraintTop_toBottomOf="@+id/genderGroup" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailAddressContainer"
                style="@style/MFTextInputStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/single_space"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/loginDetailsHeading">
                <!-- Leave a space in the TextInputLayout hint for a blank label but keep a hint in the EditText when there is no input -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailAddress"
                    style="@style/MFEditTextStyle"
                    android:focusable="true"
                    android:autofillHints="emailAddress"
                    android:hint="@string/email_address"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textEmailAddress"
                    tools:ignore="UnusedAttribute" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/passwordHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/password"
                app:layout_constraintTop_toBottomOf="@+id/emailAddressContainer"
                app:layout_constraintBottom_toTopOf="@+id/passwordContainer" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordContainer"
                style="@style/MFTextInputStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/single_space"
                app:passwordToggleEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordHeading">
                <!-- Leave a space in the TextInputLayout hint for a blank label but keep a hint in the EditText when there is no input -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    style="@style/MFEditTextStyle"
                    android:focusable="true"
                    android:autofillHints="password"
                    android:hint="@string/password"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPassword"
                    tools:ignore="UnusedAttribute" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/confirmPasswordHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/confirm_password"
                app:layout_constraintTop_toBottomOf="@+id/passwordContainer" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordContainer"
                style="@style/MFTextInputStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/single_space"
                app:passwordToggleEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmPasswordHeading"
                >
                <!-- Leave a space in the TextInputLayout hint for a blank label but keep a hint in the EditText when there is no input -->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/confirmPassword"
                    style="@style/MFEditTextStyle"
                    android:focusable="true"
                    android:autofillHints="password"
                    android:hint="@string/confirm_password"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPassword"
                    tools:ignore="UnusedAttribute" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.myfiziq.sdk.views.TintableButton
                android:id="@+id/continueButton"
                style="@style/MFButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/continue_caps"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirmPasswordContainer" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</LinearLayout>