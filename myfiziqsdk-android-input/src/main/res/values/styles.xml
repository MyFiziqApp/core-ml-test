<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--My Fiziq Input SDK Styling, MFI = My Fiziq Input-->

    <!--Fragment Create Avatar Styling-->
    <style name="MFICreateAvatarScrollForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/myfiziqsdk_white</item>
    </style>

    <style name="MFICreateAvatarFormTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">35dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:text">@string/please_confirm_your_details_below</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="MFTextInputStyle.HeightForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:hint">\u00A0</item>
    </style>

    <style name="MFEditTextStyle.HeightForm">
        <item name="android:focusable">true</item>
        <item name="android:imeOptions">actionNext|flagNoExtractUi</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/height</item>
    </style>

    <style name="MFTextInputStyle.WeightForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:hint">\u00A0</item>
    </style>

    <style name="MFEditTextStyle.WeightForm">
        <item name="android:focusable">true</item>
        <item name="android:imeOptions">actionGo|flagNoExtractUi</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:hint">@string/weight</item>
    </style>

    <style name="MFIDateOfBirthLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:text">@string/date_of_birth</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MFIHeightWeightLabel">
        <item name="android:layout_weight">50</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/height</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MFTextInputStyle.BirthDateForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:hint">\u00A0</item>
    </style>

    <style name="MFEditTextStyle.BirthDateForm">
        <item name="android:drawableEnd">@drawable/ic_person</item>
        <item name="android:focusable">true</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:inputType">none</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:hint">@string/date_of_birth</item>
    </style>

    <style name="MFIGenderLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:text">@string/gender</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MFRadioButtonContainer.MaleForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_weight">50</item>
    </style>

    <style name="MFIRadioButtonMaleForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tag">gender</item>
        <item name="android:text">@string/male</item>
        <item name="android:theme">@style/MFRadioButton</item>
    </style>

    <style name="MFRadioButtonContainer.FemaleForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">50</item>
    </style>

    <style name="MFIRadioButtonFemaleForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tag">gender</item>
        <item name="android:text">@string/female</item>
        <item name="android:theme">@style/MFRadioButton</item>
    </style>

    <style name="MFButton.CreateAvatarButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:text">@string/continueText</item>
    </style>

    <style name="MFButton.CreateAvatarGuestButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:text">@string/continueGuestText</item>
    </style>

    <style name="MFIPleaseWaitProcessingText">
        <item name="android:textColor">@color/myfiziqsdk_black</item>
        <item name="android:drawableStart">@drawable/ic_info_dark</item>
        <item name="android:drawablePadding">@dimen/myfiziqsdk_icon_padding</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">@dimen/myfiziqsdk_icon_padding</item>
        <item name="android:layout_marginRight">@dimen/myfiziqsdk_icon_padding</item>
    </style>

    <style name="MFIImageConsentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/myfiziqsdk_white</item>
    </style>

    <!--Fragment Image Consent Styling-->
    <style name="MFIImageConsentTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:text">@string/image_consent_header</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MFIImageConsentScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:fadingEdgeLength">60dp</item>
        <item name="android:requiresFadingEdge">vertical</item>
    </style>

    <style name="MFIImageConsentContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:text">@string/image_consent_conditions</item>
        <item name="android:textColor">@color/myfiziqsdk_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MFIImageConsentCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:text">@string/i_agree_to_the_terms_conditions</item>
        <item name="android:textStyle">bold</item>
        <item name="android:theme">@style/checkBoxStyle</item>
    </style>

    <style name="MFButton.ImageConsentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/continue_caps</item>
    </style>

</resources>